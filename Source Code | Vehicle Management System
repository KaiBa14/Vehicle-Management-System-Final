class Customer:
    def __init__ (self,Name,Contact,Address):
        self.Name = input("Name: ")
        self.Contact = input("Contact: ")
        self.Address = input("Address: ")

    def PrintName(self):
        print(self.Name);
    def PrintContact(self):
        print(self.Contact);
    def PrintAddress(self):
        print(self.Address);

class Vehicle(Customer):
    
    
    def __init__ (self,Name,contact,address,Plate_Num,Engine_Num, Chassis_Num,Body_Type, Denomination,
                  Piston_Displacement, Cylinder_Num, Fuel, Make, Series, Body_Num, 
                  Year_Model,Gross_WT, Net_WT, Shipping_WT, Net_Capacity):
        super().__init__(Name,contact,address)

        self.Plate_Num = input("Plate_Num: "); self.Engine_Num = input("Engine_Num: ");
        self.Chassis_Num = input("Chassis_Num: ");      self.Body_Type = input("Body_Type: ");
        self.Denomination = input("Denomination: ");    self.Piston_Displacement = input("Piston_Displacement: ");
        self.Cylinder_Num = input("Cylinder_Num: ");    self.Fuel = input("Fuel: "); self.Make = input("Make: ");
        self.Series = input("Series: "); self.Body_Num = input("Body_Num: "); self.Year_Model = input("Year_Model: "); 
        self.Gross_WT = input("Gross_WT: ") + "kg";        self.Net_WT = input("Net_WT: ") + "kg"; 
        self.Shipping_WT = input("Shipping_WT: ") + "kg";  self.Net_Capacity = input("Net_Capacity: ") + "kg";
        
        
    def Print_Plate_Num(self):
        print(self.Plate_Num)

    def Print_Chassis_Num(self):
        print(self.Chassis_Num)

    def Print_Denomination(self):
        print(self.Denomination)

    def Print_Series(self):
        print(self.Series)

    def Print_Body_Num(self):
        print(self.Body_Num)

    def Print_Gross_WT(self):
        print(self.Gross_WT)

    def Print_Shipping_WT(self):
        print(self.Shipping_WT)

    def Print_Engine_Num(self):
        print(self.Engine_Num)

    def Print_Body_Type(self):
        print(self.Body_Type)

    def Print_Piston_Displacement(self):
        print(self.Piston_Displacement)

    def Print_Fuel(self):
        print(self.Fuel)

    def Print_Make(self):
        print(self.Make)

    def Print_Year_Model(self):
        print(self.Year_Model)

    def Print_Net_WT(self):
        print(self.Net_WT)

    def Print_Net_Capacity(self):
        print(self.Net_Capacity)


  
