    def Body_Type(self):
        print("Body Type: Sedan")
    def Piston_Displacement(self):
        print("Displacement: 1794cc")
    def Cylinder_Num(self):
        print("No. of Cylinder: 4")
    def Fuel(self):
        print("Fuel Type: Petrol/50.0L Capacity")
    def Seating_Capacity(self):
        print("Seating Capacity: 5")
    def Year_Model(self):
        print("Year Model: 2020")
