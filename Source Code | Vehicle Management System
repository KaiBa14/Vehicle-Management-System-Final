######################## Repair & Maintenance
a=random.randint(1,12) #Battery
b=random.randint(1,20) #Oil
c=random.randint(1,4)  #Tires
d=random.randint(1,35) #SparkPlugs
e=random.randint(1,58) #Paint
f=random.randint(1,14) #Headlights
g=random.randint(1,10) #Rearlights
h=random.randint(1,3)  #Wiper
i=random.randint(1,5)  #Air Filter
j=random.randint(1,80) #A/C System
k=random.randint(1,13) #Steering System
l=random.randint(1,6)  #Exhaust System

class Repair_Maintenance:
    def __init__ (self,Ran_Battery,Ran_Oil,Ran_Tires,Ran_Spark_Plugs,Ran_Paint, Ran_Headlights, Ran_Rearlights,
                  Ran_Wipers,Ran_Air_Filters,Ran_AC_System, Ran_Steering, Ran_Exhaust_System
                  ):
        self.Ran_Battery = Ran_Battery; self.Ran_Oil = Ran_Oil;
        self.Ran_Tires = Ran_Tires; self.Ran_Spark_Plugs = Ran_Spark_Plugs;
        self.Ran_Paint = Ran_Paint ;self.Ran_Headlights = Ran_Headlights;
        self.Ran_Rearlights = Ran_Rearlights;self.Ran_Wipers = Ran_Wipers;
        self.Ran_Air_Filters = Ran_Air_Filters; self.Ran_AC_System = Ran_AC_System;
        self.Ran_Steering = Ran_Steering;self.Ran_Exhaust_System = Ran_Exhaust_System;

    def print_repair_all(self):
        print ("\t\t\t\t\t\tREPAIR AND MAINTENANCE\n\n\n");
        print ("Car Battery: " + str(self.Ran_Battery))
        if a <= 4:
            a == 0
            print("Battery has no issue")
            
        else:
            print("Price: " + str((a*10)) + "$")

        print ("\nCar Oil Leak: " + str(self.Ran_Oil))
        if b <= 6:
            b == 0
            print("Oil has no issue")
        else:
            print("Price: " + str((b*20)) + "$")

        print ("\nCar Tires: " + str(self.Ran_Tires))
        if c == 1:
            c == 0
            print("Tires has no issue")
        else:
            print("Price: " + str((c*5)) + "$")

        print ("\nCar Spark Plugs: " + str(self.Ran_Spark_Plugs))
        if d <= 15:
            d == 0
            print("Spark Plugs has no issue")
        else:
            print("Price: " + str((d*2)) + "$")

        print ("\nCar RePaint: " + str(self.Ran_Paint))
        if e <= 29:
            e == 0
            print("Car Paint has no issue")
        else:
            print("Price: " + str((e*10)) + "$")

        print ("\nCar HeadLights: " + str(self.Ran_Headlights))
        if f <= 4:
            f == 0
            print("Headlights has no issue")
        else:
            print("Price: " + str((f*50)) + "$")

        print ("\nCar RearLights: " + str(self.Ran_Rearlights))
        if g <= 6:
            g == 0
            print("Rearlight has no issue")
        else:
            print("Price: " + str((g*10)) + "$")
            
        print ("\nCar Wipers: " + str(self.Ran_Wipers))
        if h <= 1:
            h == 0
            print("Wiper has no issue")
        else:
            print("Price: " + str((h*12)) + "$")

        print ("\nCar Air Filters:  " + str(self.Ran_Air_Filters))
        if i <= 3:
            i == 0
            print("Air Filter has no issue")
        else:
            print("Price: " + str((i*5)) + "$")

        print ("\nCar A/C System: " + str(self.Ran_AC_System))
        if j <= 14:
            j == 0
            print("A/C System has no issue")
        else:
            print("Price: " + str((j*10)) + "$")

        print ("\nCar Steering System: " + str(self.Ran_Steering))
        if k <= 9:
            k == 0
            print("Steering System has no issue")
        else:
            print("Price: " + str((k*50)) + "$")

        print ("\nCar Exhaust System: " + str(self.Ran_Exhaust_System))
        if l <= 2:
            l == 0
            print("Exhaust System has no issue")
        else:
            print("Price: " + str((l*50)) + "$")

        print("\nTOTAL PRICE: " + str(((a * 10)+(b * 50)+(c * 5)+(d * 2)+(e * 10)+(f * 50)+(g * 10)+(h * 12)+(i * 5)+(j * 10)+(k * 50)+(l * 50))) + "$\n")

