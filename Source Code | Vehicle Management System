#Polymorphism
#Polymorphism
from abc import ABC
class Car(ABC):
    def Name(self):
        pass
    def ARAI_Mileage(self):
        pass
    def City_Mileage(self):
        pass
    def Body_Type(self):
        pass
    def Piston_Displacement(self):
        pass
    def Cylinder_Num(self):
        pass
    def Fuel(self):
        pass
    def Seating_Capacity(self):
        pass
    def Year_Model(self):
        pass
    def Gross_WT(self):
        pass
    def Net_WT(self):
        pass
    def Shipping_WT(self):
        pass
    def Net_Capacity(self):
        pass
      
