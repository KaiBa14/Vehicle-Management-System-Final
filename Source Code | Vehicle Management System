class Insurance:
    def __init__ (self):
        self.Depositor = input("Depositor Name: ");         
        self.DOP = input("Date of Purchase: ");
        self.Name = self.Depositor;
        self.Date = self.DOP;
        self.Company = "KADB Insurance Company";

    def print_Insurance(self):
        print ("\nKADB Insurance Company\t\t\t\t\t\t\t\t\t\t\tKADB Debit Cards\n\n");
        print ("\t\t\t\t\t\t   CONFIRMATION OF COVER\n")
        print ("======================================================================================================================\n")
        print ("\t\t\t\t\t\t   Group Policy Holder\n\n")
        print ("\t\t\t\t\t                  1234ABC\n")
        print ("======================================================================================================================\n")
        print ("\t\t\t\t\t        Insured/Depositor's Name\n\n")
        print ("\t\t\t\t          Depositor Name: ", str(self.Depositor))
        print ("\n\t\t\t\t\t           Date of Purchase\n\n")
        print ("\n\t\t\t\t\t\tDate of Purchase: ", str(self.DOP))
        print ("======================================================================================================================\n")
        print ("\t\t\t\t\t\t   AMOUNT OF INSURANCE\n")
        print ("\t\t\t\t\t\t\t₱70,000\n\n")
        print ("\t\t\t\t\t\t  SCHEDULE OF BENEFITS\n")
        print ("\t\t\t\t\tAccidental Death and Permanent Disablement\n")
        print ("\t\t\t\t\t\t\t₱50,000\n\n")
        print ("\t\t\t\t\t\t   BURIAL ASSISTANCE\n")
        print ("\t\t\t\t\t\t\t₱50,000\n")
        print ("======================================================================================================================\n")
        print ("This is to certify that the above listed name is insured with KADB Insurance Corporation under personal\n")
