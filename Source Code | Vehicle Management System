######################## Vehicle Re-Marketing
status=random.randint(1,2)
class Re_Marketing:
    
    def __init__ (self):
        self.Seller = input("Seller Name: ");             self.Description = input("Vehicle Description: ");
        self.Vehicle_Name = input("Vehicle Name: ");      self.URL = input("URL: ")
        self.Promotion = input("Promotion: ");            self.Status = status;
    def Re_Marketing_Print_All(self):
        print ("\n\t\t\t\t\t\tVehicle Re-Marketing\n\n\n");
        print ("=============================================================")
        print ("Seller Name: ", str(self.Seller))
        
        print ("\nVehicle Name: ", str(self.Vehicle_Name))
        
        print ("\nVehicle Description: " , str(self.Description))
        
        print ("\nURL: ", str(self.URL))
       
        print ("\nPromotion: " , str(self.Promotion))

        print(status)
        if status == 1:
            print("\nVehicle Not Available/Denied")
        else : 
            print("\nVehicle Bought/Accepted")
        print ("=============================================================")

